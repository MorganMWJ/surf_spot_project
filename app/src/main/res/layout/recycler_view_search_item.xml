<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="3dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:columnCount="2"
        android:rowCount="5">

        <TextView
            android:id="@+id/recent_searches_location_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            tools:text="50.56713, -5.089716"
            android:padding="@dimen/small_padding"/>

        <TextView
            android:id="@+id/recent_searches_radius_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            tools:text="2000"
            android:padding="@dimen/small_padding"/>

        <TextView
            android:id="@+id/recent_searches_place_type_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            tools:text="Lodging"
            android:padding="@dimen/small_padding"/>

        <TextView
            android:id="@+id/recent_searches_use_surf_keyword_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            tools:text="Yes"
            android:padding="@dimen/small_padding"/>

        <TextView
            android:id="@+id/recent_searches_search_time_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            tools:text="12/06/2020 20:51"
            android:padding="@dimen/small_padding"/>

        <ImageView
            android:id="@+id/recent_search_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowSpan="5"
            android:layout_column="1"/>

    </GridLayout>

</androidx.cardview.widget.CardView>