<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="3dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:columnCount="5"
        android:rowCount="2">

        <TextView
            android:id="@+id/recent_searches_location_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:text="Location"
            android:padding="@dimen/small_padding"/>

        <TextView
            android:id="@+id/recent_searches_radius_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:text="Radius"
            android:padding="@dimen/small_padding"/>

        <TextView
            android:id="@+id/recent_searches_place_type_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:text="Place Type"
            android:padding="@dimen/small_padding"/>

        <TextView
            android:id="@+id/recent_searches_use_surf_keyword_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:text="Use Surf Keyword"
            android:padding="@dimen/small_padding"/>

        <TextView
            android:id="@+id/recent_searches_search_time_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:text="Radius"
            android:padding="@dimen/small_padding"/>

        <TextView
            android:id="@+id/recent_searches_location_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:text="50.56713, -5.089716"
            android:padding="@dimen/small_padding"/>

        <TextView
            android:id="@+id/recent_searches_radius_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:text="Radius"
            android:padding="@dimen/small_padding"/>

        <TextView
            android:id="@+id/recent_searches_place_type_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:text="Lodging"
            android:padding="@dimen/small_padding"/>

        <TextView
            android:id="@+id/recent_searches_use_surf_keyword_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            tools:text="Yes"
            android:padding="@dimen/small_padding"/>

        <TextView
            android:id="@+id/recent_searches_search_time_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            tools:text="12/06/2020 20:51"
            android:padding="@dimen/small_padding"/>

    </GridLayout>

</androidx.cardview.widget.CardView>